<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent"
    tools:context="com.bfurns.activity.RecommendationTest">

    <include layout="@layout/toolbar"/>
    <ScrollView
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content">


            <android.support.v7.widget.CardView
                android:layout_gravity="center"
                android:id="@+id/dummycard"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:elevation="3dp"
                app:cardCornerRadius="3dp"
                app:contentPadding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:weightSum="2"
                        android:layout_height="170dp">

                        <RelativeLayout
                            android:background="#FFAB40"
                            android:id="@+id/industrialGood"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="match_parent">

                            <TextView
                                android:text="HDL"
                                android:textColor="@color/white"
                                android:layout_margin="20dp"
                                android:textSize="30sp"
                                android:gravity="center"
                                android:id="@+id/industrialGoodImage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />


                                <TextView
                                    android:layout_below="@+id/industrialGoodImage"
                                    android:layout_weight="0.5"
                                    android:id="@+id/text1"
                                    android:layout_width="match_parent"
                                    android:text="Blood Pressure"
                                    android:padding="5dp"
                                    android:textSize="16sp"
                                    android:layout_margin="10dp"
                                    android:textColor="@color/white"
                                    android:layout_height="wrap_content" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:background="#64FFDA"
                            android:id="@+id/agroproducee"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/aa"
                                android:text="HDL"
                                android:textColor="@color/white"
                                android:layout_margin="20dp"
                                android:textSize="30sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />


                                <TextView
                                    android:layout_margin="10dp"
                                    android:layout_below="@+id/aa"
                                    android:layout_weight="0.5"
                                    android:layout_width="match_parent"
                                    android:text="Sugar"
                                    android:textSize="16dp"
                                    android:padding="5dp"
                                    android:textColor="@color/white"
                                    android:layout_height="wrap_content" />



                        </RelativeLayout>




                    </LinearLayout>







                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:weightSum="2"
                        android:layout_height="170dp">

                        <RelativeLayout
                            android:background="#4FC3F7"
                            android:id="@+id/industrialGoods"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="match_parent">

                            <TextView
                                android:text="HDL"
                                android:textColor="@color/white"
                                android:layout_margin="20dp"
                                android:textSize="30sp"
                                android:gravity="center"
                                android:id="@+id/industrialGoodImagee"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />


                            <TextView
                                android:layout_below="@+id/industrialGoodImagee"
                                android:layout_weight="0.5"
                                android:id="@+id/text2"
                                android:layout_width="match_parent"
                                android:text="Heart Beats"
                                android:padding="5dp"
                                android:textSize="16sp"
                                android:layout_margin="10dp"
                                android:textColor="@color/white"
                                android:layout_height="wrap_content" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:background="#F44336"
                            android:id="@+id/agroproduce"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/aab"
                                android:text="HDL"
                                android:textColor="@color/white"
                                android:layout_margin="20dp"
                                android:textSize="30sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />


                            <TextView
                                android:layout_margin="10dp"
                                android:layout_below="@+id/aab"
                                android:layout_weight="0.5"
                                android:layout_width="match_parent"
                                android:text="Hemoglobin"
                                android:textSize="16dp"
                                android:padding="5dp"
                                android:textColor="@color/white"
                                android:layout_height="wrap_content" />



                        </RelativeLayout>




                    </LinearLayout>














                </LinearLayout>


            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
